<RelativeLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="changeColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:background="@color/md_black_1000"
    tools:context=".WallpapersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/set_wall"
            style="@style/Buttons"
            android:drawableLeft="@drawable/ic_phone_android_white_48dp"
            android:drawableStart="@drawable/ic_phone_android_white_48dp"
            android:onClick="setWallpaperImage"
            android:text="@string/set_wall"/>

        <Button
            android:id="@+id/save_wall"
            style="@style/Buttons"
            android:drawableLeft="@drawable/ic_save_white_48dp"
            android:drawableStart="@drawable/ic_save_white_48dp"
            android:onClick="saveImage"
            android:text="@string/save_wall"/>

        <Button
            android:id="@+id/copy_color"
            style="@style/Buttons"
            android:drawableLeft="@drawable/ic_content_copy_white_48dp"
            android:drawableStart="@drawable/ic_content_copy_white_48dp"
            android:onClick="copyColor"
            android:text="@string/copy_color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/displayColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/color_label"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
</RelativeLayout>
